@{
    ViewData["Title"] = "Login";
}
@model Users
<div class="row">
    <div class="column">
        <h1>Register</h1>
        <form asp-action="Register" asp-controller="Home" method="POST">
            <span asp-validation-for="FirstName"></span><br>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName"><br>
            <span asp-validation-for="LastName"></span><br>
            <label asp-for="LastName"></label>
            <input asp-for="LastName"><br>
            <span asp-validation-for="Email"></span><br>
            <label asp-for="Email"></label>
            <input asp-for="Email"><br>
            <span asp-validation-for="Password"></span><br>
            <label asp-for="Password"></label>
            <input asp-for="Password"><br>
            <span asp-validation-for="Confirm"></span><br>
            <label asp-for="Confirm"></label>
            <input asp-for="Confirm"><br>
            <input value="Register" type="submit">
        </form>
    </div>
    <div class="column">
        <h1>Login</h1>
        <form asp-action="Login" asp-controller="Home" method="POST">
            <span asp-validation-for="Email"></span><br>
            <label asp-for="Email"></label>
            <input asp-for="Email"><br>
            <span asp-validation-for="Password"></span><br>
            <label asp-for="Password"></label>
            <input asp-for="Password"><br>
            <input value="Log In" type="submit">
        </form>
    </div>
</div>
